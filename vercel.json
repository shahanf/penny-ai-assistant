{
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "s-maxage=86400, stale-while-revalidate=43200" }
      ]
    },
    {
      "source": "/api/auth",
      "headers": [
        { "key": "Cache-Control", "value": "no-store, no-cache, must-revalidate" }
      ]
    },
    {
      "source": "/api/sync-status",
      "headers": [
        { "key": "Cache-Control", "value": "s-maxage=10, stale-while-revalidate=5" }
      ]
    },
    {
      "source": "/api/sync-latest",
      "headers": [
        { "key": "Cache-Control", "value": "s-maxage=60, stale-while-revalidate=30" }
      ]
    },
    {
      "source": "/api/vercel-status",
      "headers": [
        { "key": "Cache-Control", "value": "s-maxage=60, stale-while-revalidate=30" }
      ]
    },
    {
      "source": "/api/neon-status",
      "headers": [
        { "key": "Cache-Control", "value": "s-maxage=300, stale-while-revalidate=60" }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
